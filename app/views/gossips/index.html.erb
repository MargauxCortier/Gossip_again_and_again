
<html>


<p id="notice"><%= notice %></p>

<h1>Gossips</h1>

<table style="width: 500px; margin-left: 100px">
  <thead>
    <tr>
      <th>Author</th>
      <th style="padding-left: 50px;">   Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
        <td><%= gossip.anonymous_gossiper %></td>
        <td><%= gossip.content %></td>
        <td><%= link_to 'Show', gossip, class: "btn btn-outline-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_gossip_path(gossip), class: "btn btn-outline-warning btn-sm" %></td>
        <td><%= button_to 'Destroy', gossip, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gossip', new_gossip_path, class: "btn btn-primary", style: "margin: 1em" %>

</html>